<!DOCTYPE html>
<html {{ site.language_attributes }}>
<head>
    <meta charset="{{ site.charset }}" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    {{ function('wp_head') }}
</head>
<body class="{{ body_class }}">
    <header class="header">
        <h1>{{ site.name }}</h1>
    </header>

    <main class="main">
        {% block content %}
            {# Le contenu sera inséré ici #}
        {% endblock %}
    </main>

    <footer class="footer">
        <p>&copy; {{ "now"|date('Y') }} {{ site.name }}</p>
    </footer>
    {{ function('wp_footer') }}
</body>
</html>
