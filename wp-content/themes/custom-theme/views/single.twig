<!DOCTYPE html>
<html {{ site.language_attributes }}>
<head>
    <meta charset="{{ site.charset }}">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{ post.title }} - {{ site.name }}</title>
    {{ function('wp_head') }}
</head>
<body class="{{ body_class }}">
    <header class="site-header">
        <div class="container">
            <h1 class="site-title">
                <a href="{{ site.url }}">{{ site.name }}</a>
            </h1>
            <nav class="main-navigation">
                {% if menu %}
                    {{ menu }}
                {% endif %}
            </nav>
        </div>
    </header>

    <main class="site-main">
        <div class="container">
            <article class="post single-post">
                <header class="post-header">
                    <h1 class="post-title">{{ post.title }}</h1>
                    <div class="post-meta">
                        <time datetime="{{ post.date|date('c') }}">
                            {{ post.date|date('j F Y') }}
                        </time>
                        <span class="post-author">par {{ post.author.name }}</span>
                        {% if post.categories %}
                            <div class="post-categories">
                                {% for category in post.categories %}
                                    <a href="{{ category.link }}" class="category">{{ category.name }}</a>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>
                </header>

                {% if post.thumbnail %}
                    <div class="post-thumbnail">
                        <img src="{{ post.thumbnail.src }}" alt="{{ post.thumbnail.alt }}">
                    </div>
                {% endif %}

                <div class="post-content">
                    {{ post.content|wp_content|raw }}
                </div>

                {% if post.tags %}
                    <footer class="post-footer">
                        <div class="post-tags">
                            <strong>Tags :</strong>
                            {% for tag in post.tags %}
                                <a href="{{ tag.link }}" class="tag">{{ tag.name }}</a>
                            {% endfor %}
                        </div>
                    </footer>
                {% endif %}
            </article>

            {% if comments %}
                <section class="comments">
                    <h3>Commentaires</h3>
                    {{ comments }}
                </section>
            {% endif %}
        </div>
    </main>

    <footer class="site-footer">
        <div class="container">
            <p>&copy; {{ "now"|date("Y") }} {{ site.name }}. Tous droits réservés.</p>
        </div>
    </footer>

    {{ function('wp_footer') }}
</body>
</html>
